<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_child"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_borders"
    tools:context="com.orfriend.orfriend.frontend.userPage.adoptPage.ChooseChild">


    <fragment
        android:id="@+id/mapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_marginTop="98dp"
        android:layout_below="@+id/imageView9"
        />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:background="@null"
        app:srcCompat="@drawable/back"
        android:layout_marginTop="10dp"
        android:id="@+id/chooceChildBackBtn"
        android:layout_alignTop="@+id/imageView9"
        android:layout_toStartOf="@+id/imageView9"
        android:layout_marginEnd="18dp"
        android:layout_toLeftOf="@+id/imageView9"
        android:layout_marginRight="18dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/choosecountry"
        android:id="@+id/imageView9"
        tools:ignore="ContentDescription"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/dropDownSpinner"
        android:background="@drawable/background_borders"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/imageView9"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />




</RelativeLayout>
